<!-- Lists all the details of the account passed in a card format -->
<!-- Dont use any scripts here as this view is generally looped -->

<div class="panel panel-default myaccounts_panel" data-accnum='<%= account.number %>'>
  <div class="panel-heading">
  	<%= account.name %> / <small><%= account.acc_type %></small>
  	<label class='pull-right acc_toggle'><input type="checkbox" name='user_accounts[]' value='<%= account.number %>' /> <small>use this account</small></label>
  	<div class='clearfix'></div>
  </div>
  <div class="panel-body">
    <table class='table table-responsive table-condensed table-striped' style="margin-bottom: 0">
		<tbody>
<!-- 			<tr>
			  <td>Name</td>
			  <td><%= account.name %></td>
			</tr>
 -->			<tr>
			  <td>Number</td>
			  <td class="acc_number"><%= account.number %></td>
			</tr>
			<tr <%= "class=high_balance" if account.balance > HIGH_BALANCE_ACCOUNT %>>
			  <td>Balance</td>
			  <td><%= account.balance_display %></td>
			</tr>
			<tr>
			  <td>Post Dated</td>
			  <td><button type="button" class="btn btn-link post_dated" data-accnum='<%= account.number %>'>
			  	<%= account.post_dated_display %></button></td>
			</tr>
			<tr>
			  <td>Affective Balance</td>
			  <td><%= account.affective_balance_display %></td>
			</tr>
		</tbody>
	</table>
  </div>
  <% if show_amount_box %>
  <div class="panel-footer">
  	<div class="form-group" title="Amount from this account" style="margin-bottom: 0">
	  <input type="text" class="form-control account_amt" name="account_amts[<%= account.number %>]"
	  		value='<%= params[:account_amts][account.number] if params[:account_amts] %>' 
	  		placeholder="Amount from this account" disabled>
	</div>
  </div>
  <% end %>
</div>